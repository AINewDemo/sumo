<?xml version="1.0" encoding="UTF-8"?>
<Configuration >
	<Appenders>
		<RollingFile name="RollingFile" fileName="sumo.log" filePattern="$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB"/>
			</Policies>
		</RollingFile >
		<Console name="STDOUT" target="SYSTEM_OUT">
		  <PatternLayout pattern="%5p %d %C: %m%n"/>
		</Console>
	</Appenders>
   <Loggers>
		<logger name="jrc.it.geolocation.common" additivity="false ">
			<level value="ERROR"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="jrc.it.geolocation.geo" additivity="false	">
			<level value="ERROR"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="jrc.it.geolocation.interpolation" additivity="false">
			<level value="ERROR"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="jrc.it.geolocation.metadata" additivity="false">
			<level value="ERROR"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="ncsa.hdf.hdflib.HDFLibrary">
			<level value="WARN"/>
		</logger>
		<logger name="org.geoimage.analysis" additivity="false">
			<level value="INFO"/>
			<AppenderRef ref="STDOUT"/>
			<AppenderRef ref="RollingFile"/>
		</logger>
		<logger name="org.geoimage.def" additivity="false">
			<level value="DEBUG"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="org.geoimage.impl" additivity="false">
			<level value="DEBUG"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="org.geoimage.viewer" additivity="false">
			<level value="DEBUG"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		<logger name="org.geoimage.viewer.core.layers" additivity="false">
			<level value="DEBUG"/>
			<AppenderRef ref="STDOUT"/>
		</logger>
		
		<root>
			<level value="DEBUG"/>
			<AppenderRef ref="STDOUT"/>
			<AppenderRef ref="RollingFile"/>
		</root>
	</Loggers>
</Configuration>